            <Label Grid.Column="1" Foreground="White" FontWeight="DemiBold" FontSize="28" Margin="85,57,152,332" >
                Wybierz pracownika:
            </Label>

            <DataGrid Margin="10,10,10,10" Name="dataGrid1" Grid.Row="1" Foreground="White"/>



